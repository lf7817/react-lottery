{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "object-literal-sort-keys": false
  }

}
